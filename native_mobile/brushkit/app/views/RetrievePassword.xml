<Alloy>
	<Window id="retrieve_password_window" title="Retreive Pwd" layout="composite">
		<View id="textfields_view" class="content_tile">
			<Label>Forgot Password</Label>
			<TextField id="textfield_email" class='textfield_email' hintText='Enter Email'/>
		</View>
		
		<View id="success_view">
			<Label id="success">Success. You will recieve an email shortly.</Label>
			<Button id="close">Close</Button>
		</View>
		
		<View id="fail_view">
			<Label id="fail">Unable to locate account by that email. Try again.</Label>
		</View>
		
		<View id="button_view" class="content_tile">
			<Button id='submit' title="Submit" />
		</View>
		
		<View id="blank_view" class="content_tile">
			<ImageView id="watermark" image="/images/logo.png"></ImageView>
		</View>
	</Window>
</Alloy>	