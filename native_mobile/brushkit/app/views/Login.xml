<Alloy>
	<Window id="login_window" title="Login" class="login" layout="composite">
		<View id="textfields_view" class="content_tile">
			<TextField id="textfieldUsername" class='textfield-username' hintText='username'/>
			<TextField id="textfieldPwd" class='textfield-pwd'
				hintText='password' passwordMask='true'/>
			<Label id="error_message">Unrecongized username or password.</Label>
			<Button id="retrieve_password">Retrieve password</Button>
		</View>
		
		<View id="button_view" class="content_tile">
			<Button id='submit' title="Login" onClick="do_login" />
		</View>
		
		<View id="blank_view" class="content_tile">
			<ImageView id="watermark" image="/images/logo.png"></ImageView>
		</View>
	</Window>
</Alloy>	